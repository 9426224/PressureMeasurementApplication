<Window x:Class="PressureMeasurementApplication.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PressureMeasurementApplication.View" xmlns:local1="clr-namespace:PressureMeasurementApplication.ViewModel.SerialPort"
        mc:Ignorable="d"
        Title="Main" Height="500" Width="800" MaxHeight="500" MinHeight="500" MaxWidth="800" MinWidth="800" ResizeMode="NoResize">

    <Window.DataContext>
        <local1:SerialPortViewModel/>
    </Window.DataContext>

    <Grid>
        <GroupBox Header="串口通信设置" Margin="549,10,10,309"/>

        <Label Content="串口号" HorizontalAlignment="Left" Margin="553,30,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="portNameComboBox" 
                  HorizontalAlignment="Left" 
                  Margin="600,33,0,0" 
                  VerticalAlignment="Top" 
                  Width="120" 
                  Height="22" 
                  ItemsSource="{Binding PortNameList}" 
                  SelectedIndex="0" 
                  SelectedValuePath="DeviceID"
                  DisplayMemberPath="DeviceInfo"
                  SelectedValue="{Binding PortName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  />
        <GroupBox Header="开关" Margin="550,180,10,228"/>
        <Label Content="波特率" HorizontalAlignment="Left" Margin="553,60,0,0" VerticalAlignment="Top"/>
        <ComboBox Name="baudRateComboBox" 
                  HorizontalAlignment="Left" 
                  Margin="600,63,0,0" 
                  VerticalAlignment="Top" 
                  Width="120" 
                  Height="22" 
                  ItemsSource="{Binding BaudRatesList}"
                  SelectedIndex="0" 
                  SelectedValuePath="BaudRateValue"
                  DisplayMemberPath="BaudRateName"
                  SelectedValue="{Binding BaudRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  />

        <Button Content="开启通信" HorizontalAlignment="Left" Margin="570,212,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.553" Width="80"/>
        <Button Content="关闭通信" HorizontalAlignment="Left" Margin="680,212,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.553" Width="80"/>
        <Button Margin="738,34,40,428" ToolTip="Refresh COM* ports"  RenderTransformOrigin="0.568,0.524" Width="22" Height="22">
            <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" Stretch="Uniform" />
        </Button>

        <Label Content="校验位" HorizontalAlignment="Left" Margin="553,90,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="ParityComboBox" 
            HorizontalAlignment="Left" 
            Margin="600,93,0,0" 
            VerticalAlignment="Top" 
            Width="120" 
            Height="22" 
            ItemsSource="{Binding ParitiesList}"
            SelectedIndex="0" 
            SelectedValuePath="ParityValue"
            DisplayMemberPath="ParityName"
            SelectedValue="{Binding Parity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            />

    </Grid>
</Window>
