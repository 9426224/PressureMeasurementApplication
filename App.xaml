<Application x:Class="PressureMeasurementApplication.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PressureMeasurementApplication"
             xmlns:viewmodel="clr-namespace:PressureMeasurementApplication.ViewModel"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Resources/Themes/Metro/Light/Metro.MSControls.Core.Implicit.xaml" />
                <ResourceDictionary Source="Resources/Themes/Metro/Light/Metro.MSControls.Toolkit.Implicit.xaml" />
                <ResourceDictionary Source="Resources/Themes/Metro/OverwriteResources.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <viewmodel:ViewModelBase x:Key="ViewModelBase"/>
    </Application.Resources>
</Application>
